<xml>

	<name>Mechanical Revolution</name>
	<output_path>C:\Documents\Sites\www\mr.com</output_path>
	<files_path>C:\Documents\Sites\www\mr.com\files</files_path>

	<!-- URL CONSTRUCTION -->
	<domain>www.mechanicalrevolution.com</domain>
	<http_dir>/</http_dir>
	<files_http_dir>/files/</files_http_dir>

	<secret>Papa was a rolling stone!</secret>

	<!-- TYPES -->
	<types>
		<type>
			<name>Blog</name>
			<id>blog</id>
			<location>blog/</location>
			<template>item.tmpl</template>
		</type>
		<type>
			<name>Page</name>
			<id>page</id>
			<location></location>
			<template>page.tmpl</template>
		</type>
	</types>

	<!-- TOPICS -->
	<topics>
		<topic>
			<id>perl5</id>
			<name>Perl 5</name>
		</topic>
		<topic>
			<id>cpan</id>
			<name>Better CPAN</name>
		</topic>
		<topic>
			<id>miril</id>
			<name>Miril</name>
		</topic>
		<topic>
			<id>padre</id>
			<name>Padre, the Perl IDE</name>
		</topic>
		<topic>
			<id>crusade</id>
			<name>Perl Evangelism</name>
		</topic>
		<topic>
			<id>modules</id>
			<name>Modules</name>
		</topic>
		<topic>
			<id>git</id>
			<name>Git and Github</name>
		</topic>
		<topic>
			<id>general</id>
			<name>Everything Else</name>
		</topic>
	</topics>

	<!-- LISTS -->
	<lists>
		<list>
			<id>front_page</id>
			<name>Front Page</name>
			<template>front_page.tmpl</template>
			<location>index.html</location>
			<match>
				<type>blog</type>
				<status>published</status>
				<last>6</last>
			</match>
		</list>
		<list>
			<id>feed</id>
			<name>Atom Feed</name>
			<template>atom.tmpl</template>
			<location>feed.xml</location>
			<match>
				<type>blog</type>
				<status>published</status>
				<last>10</last>
			</match>
		</list>
		<list>
			<id>archive</id>
			<name>Article Archive</name>
			<template>archive.tmpl</template>
			<location>archive.html</location>
			<match>
				<type>blog</type>
			</match>
		</list>
		<list>
			<id>by_month</id>
			<name>Monthly Archive</name>
			<group>month</group>
			<template>by_month.tmpl</template>
			<location>archive/%(year)d/%(month)02d.html</location>
			<match>
				<type>blog</type>
			</match>
		</list>
		<list>
			<id>by_topic</id>
			<name>Topics</name>
			<group>topic</group>
			<template>by_month.tmpl</template>
			<location>topic/%(topic)s.html</location>
			<match>
				<type>blog</type>
			</match>
		</list>
	</lists>

</xml>
